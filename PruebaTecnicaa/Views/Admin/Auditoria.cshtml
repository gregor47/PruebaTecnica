@model List<PruebaTecnicaa.Models.PruebaTecnica.Auditoria>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row mt-5">
    <div class="col-md text-center">
        <h1>Auditoria</h1>
    </div>
</div>
<hr />
<div class="row mt-3">
    <div class="col-md">
        <table class="table table-striped table-bordered table-hover" id="tableRadicados">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th class="text-center">Accion</th>
                    <th class="text-center">Usuario Id</th>
                    <th class="text-center">Fecha</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @item.AuditoriaId
                        </td>
                        <td class="text-center">
                            @item.Accion
                        </td>
                        <td class="text-center">
                            @item.UsuarioNombre
                        </td>
                        <td class="text-center" data-order="@Convert.ToDateTime(item.Fecha).Ticks">
                            @item.Fecha
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tableRadicados').DataTable({
            //"scrollX": true
        });
    });
</script>