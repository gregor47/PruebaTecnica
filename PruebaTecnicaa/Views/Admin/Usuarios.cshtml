@model List<PruebaTecnicaa.Models.PruebaTecnica.Usuario>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="row mt-5">
    <div class="col-md text-center">
        <h1>Usuarios</h1>
    </div>
</div>
<hr />
<div class="row mt-3">
    <div class="col-md">
        <table class="table table-striped table-bordered table-hover" id="tableRadicados">
            <thead>
                <tr>
                    <th class="text-center">Documento</th>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Estado</th>
                    <th class="text-center">Rol</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @item.Documento
                        </td>
                        <td class="text-center">
                            @item.Nombre
                        </td>
                        <td class="text-center">
                            @item.Email
                        </td>
                        <td class="text-center" data-order="@Convert.ToDateTime(item.FechaCreacion).Ticks">
                            @item.tipoRol
                        </td>
                        <td class="text-center">
                            <a class="btn btn-info" href="@Url.Action("EditarUsuario", "Admin", new { id = item.UsuarioId })">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tableRadicados').DataTable({
            //"scrollX": true
        });
    });
</script>